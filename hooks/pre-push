#!/bin/bash

echo "ğŸ” Pre-push checks starting..."

# ã‚«ãƒ©ãƒ¼å®šç¾©
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# ã‚¨ãƒ©ãƒ¼ãƒ•ãƒ©ã‚°
HAS_ERROR=0

echo -e "${BLUE}ğŸ“‹ Running Frontend lint...${NC}"
cd frontend
if npm run lint; then
    echo -e "${GREEN}âœ… Frontend lint passed${NC}"
else
    echo -e "${RED}âŒ Frontend lint failed${NC}"
    HAS_ERROR=1
fi

echo -e "${BLUE}ğŸ—ï¸  Building Frontend...${NC}"
if npm run build; then
    echo -e "${GREEN}âœ… Frontend build successful${NC}"
else
    echo -e "${RED}âŒ Frontend build failed${NC}"
    HAS_ERROR=1
fi

echo -e "${BLUE}ğŸ“‹ Running Backend lint...${NC}"
cd ../backend
if npm run lint; then
    echo -e "${GREEN}âœ… Backend lint passed${NC}"
else
    echo -e "${RED}âŒ Backend lint failed${NC}"
    HAS_ERROR=1
fi

echo -e "${BLUE}ğŸ—ï¸  Building Backend...${NC}"
if npm run build; then
    echo -e "${GREEN}âœ… Backend build successful${NC}"
else
    echo -e "${RED}âŒ Backend build failed${NC}"
    HAS_ERROR=1
fi

cd ..

if [ $HAS_ERROR -eq 1 ]; then
    echo -e "${RED}âŒ Pre-push checks failed. Push aborted.${NC}"
    echo -e "${YELLOW}ğŸ’¡ Please fix the issues and try again.${NC}"
    exit 1
else
    echo -e "${GREEN}ğŸ‰ All checks passed! Proceeding with push...${NC}"
    exit 0
fi 